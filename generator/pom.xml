  <artifactId>avro-generator-root</artifactId>
  <description>Common configuration for all generator modules.</description>
  <packaging>pom</packaging>
  <name>pom: ${project.artifactId}</name>

  <modules>
    <module>avro-kotlin-generator-api</module>
    <module>avro-kotlin-generator</module>
    <module>avro-kotlin-generator-maven-plugin</module>
  </modules>

  <properties>
    <kotlin-code-generation.version>0.0.1</kotlin-code-generation.version>
